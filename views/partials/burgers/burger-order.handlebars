<audio id="bell-sound">
  <source src="/assets/sounds/order-up.wav" type="audio/wav">
</audio>
<audio id="mmm-sound">
  <source src="/assets/sounds/mmm.mp3" type="audio/mp3">
</audio>

<div class="mx-3 my-3 px-5 py-2 border">
    <h6>{{name}}</h6>
    <p class="ml-4 my-0">Burger Type: {{burger_type}}</p>
    <p class="ml-4 my-0">Bun: {{bun}}</p>
    <p class="ml-4 my-0">Cheese: {{cheese}}</p>
    {{#unless eaten}}
      <button class="mt-2 eat-burger" data-id="{{id}}" >EAT</button>
    {{/unless}}
</div>
